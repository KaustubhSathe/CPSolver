{
	"name": "cpsolver",
	"displayName": "Codeforces",
	"description": "Solve codeforces problems directly from VS Code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"publisher": "KaustubhSathe",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cpsolver.cfSignIn",
		"onCommand:cpsolver.refresh",
		"onCommand:cpsolver.sortBySubmission",
		"onCommand:cpsolver.sortByDifficulty",
		"onView:codeforces"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cpsolver.cfSignIn",
				"title": "Codeforces Sign-In",
				"icon": {
					"dark": "./media/dark/login.svg",
					"light": "./media/light/login.svg"
				}
			},
			{
				"command": "cpsolver.refresh",
				"title": "Refresh",
				"icon": {
					"dark": "./media/dark/refresh.svg",
					"light": "./media/light/refresh.svg"
				}
			},
			{
				"command": "cpsolver.recommend",
				"title": "Recommend Problems",
				"icon": "./media/recommend.svg"
			},
			{
				"command": "cpsolver.sortByDifficulty",
				"title": "Sort by difficulty",
				"icon": {
					"dark": "./media/flash.svg",
					"light": "./media/flash.svg"
				}
			},
			{
				"command": "cpsolver.sortBySubmission",
				"title": "Sort by submissions",
				"icon": "./media/man.svg"
			},
			{
				"command": "cpsolver.displayProblem",
				"title": "Display Problem"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "cpsolver.cfSignIn",
					"when": "view == codeforces",
					"group": "navigation"
				},
				{
					"command": "cpsolver.refresh",
					"when": "view == codeforces",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "cpsolver.sortBySubmission",
					"when": "view == codeforces && viewItem == topCategory",
					"group": "inline"
				},
				{
					"command": "cpsolver.sortByDifficulty",
					"when": "view == codeforces && viewItem == topCategory",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "problems-explorer",
					"title": "Codeforces",
					"icon": "./media/icon.svg"
				}
			]
		},
		"views": {
			"problems-explorer": [
				{
					"id": "codeforces",
					"name": "Problems"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.18",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/marked": "^0.7.4",
		"@types/puppeteer": "^2.1.0",
		"axios": "^0.19.2",
		"cheerio": "^1.0.0-rc.3",
		"marked": "^1.1.0",
		"puppeteer": "^3.1.0",
		"ts-node": "^8.10.1"
	}
}
